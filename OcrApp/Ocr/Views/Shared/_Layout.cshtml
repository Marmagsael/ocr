<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ocr.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mvc.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="main-navbar" class="navbar navbar-expand-lg sticky-top  navbar-dark">
            <div class="container-fluid">

                <!-- Company Logo and Name -->
                <div class="navbar-brand ">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none "><span class="navbar-brand-name">Simpacc</span> </a>
                </div>

                <!-- Toggle button for small devices -->
                <button class="navbar-toggler collapsed text-white" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation links -->
                <div class="collapse navbar-collapse justify-content-end align-center" id="main-nav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Register">Sign Up</a>
                        </li>

                        <!-- <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="SignUp">Register</a>
                        </li> -->
                        <!-- <li class="nav-item">
                           <a class="nav-link" asp-area="" asp-controller="LoginLocked" asp-action="logout">Logout</a>
                         </li> -->

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
